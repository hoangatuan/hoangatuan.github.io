<div class="pt-6">
  <form id="newsletter-form" class="bg-red-600 p-6 text-center rounded-lg shadow-md max-w-lg mx-auto border border-gray-300">
    <h2 class="text-2xl font-bold text-center text-white mb-4">Join the Eric's Newsletter</h2>
    <p class="text-center text-white mb-6">Get latest updates in Swift, Mobile Development and Software Engineer every week.</p>
  
    <div class="flex justify-center items-center space-x-2">
     <input
        id="email-address"
        name="email"
        type="email"
        autocomplete="email"
        required
        class="email min-w-0 flex-auto rounded-md bg-white px-3.5 py-2 text-base text-black border border-gray-300 outline-none placeholder:text-gray-500 sm:text-sm"
        placeholder="Your email address..."
      />
      <button type="submit" class="bg-CEA4D21 rounded-md text-white px-4 py-2 ml-2">Subscribe</button>
    </div>
  
    <p class="text-center text-gray-300 text-sm mt-4">100% free. Unsubscribe at any time.</p>
  </form>
  
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("newsletter-form");
    form?.addEventListener("submit", async (event) => {
      event.preventDefault(); // Prevent the form from submitting the traditional way
      
      const emailInput = document.getElementById("email-address") as HTMLInputElement;
      const value = emailInput.value;

      try {
        const res = await fetch("/api/subscribe.json", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email: value }),
        });

        if (!res.ok) {
          throw new Error("Something went wrong");
        }

        const resData = await res.json();
        alert(resData.message);
      } catch (error) {
        console.error(error);
        alert("Failed to submit email");
      }
    });
  });
</script>
